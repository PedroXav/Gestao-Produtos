<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestão de Usuários" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="UsuariosGrid" Margin="10" AutoGenerateColumns="True" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Adicionar" Width="100" Margin="5" Click="Adicionar_Click"/>
            <Button Content="Editar" Width="100" Margin="5" Click="Editar_Click"/>
            <Button Content="Excluir" Width="100" Margin="5" Click="Excluir_Click"/>
        </StackPanel>
    </Grid>
</Window>
